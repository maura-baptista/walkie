    <!-- Card Bottom Row -->
      <div class="card-details">
      <div class="card-row">
        <span class="card-walk"> <%= walk.name %> |</span>
        <span class="card-name" style="color: #000;"><%= walk.category.name %></span>
      </div>
      <div class="card-row">
        <span class="card-location" style="color: #000;"><%= walk.location %> |</span>&nbsp;
        <span class="card-location" style="color: #000;"><%= walk.minmethod(walk.duration)%></span>

      </div>
    </div>

    <!-- Card Rating and Review -->
    <%= link_to walk_path(walk), anchor: "#reviews" do %>
    <%= link_to walk_path(walk), anchor: "#likes" do %>
      <div class="card-row">

    <div class="card-rating-reviews">
        <span class="card-reviews-count"><%= walk.reviews.length %>&nbsp;Reviews&nbsp;&nbsp;&nbsp;</span>
        <span id="count"><%= walk.likes.length %>&nbsp;Likes</span>
    </div>
    <% end %>
    <% end %>
</div>
    <!-- Card Link -->
    <%= link_to walk, class: "card-link" do %>
    <% end %>

  </div>


