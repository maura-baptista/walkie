  <div class="cards-container card-wrapper padded-top col-sm-6 col-lg-4">
    <div class="card-image filter" style="background-image:url('<%= walk.walk_attachments.first.photo %>')">
        <div class="wishlist-rounded wishlist-rounded-white text-center">

            <!-- Inline SVG -->
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="3430 1212 18 15.978" class="wishlist-icon wishlist-icon empty">
